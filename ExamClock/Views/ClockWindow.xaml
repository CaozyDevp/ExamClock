<Window x:Class="ExamClock.Views.ClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ExamClock.ViewModels"
        mc:Ignorable="d"
        Background="Black"
        Title="时钟"
        Name="Window"
        Height="1000"
        Width="1500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized"
        Topmost="True">
    <Window.DataContext>
        <vm:ClockViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="{Binding ElementName=ClockGrid, Path=Width}"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="ClockGrid"
              Grid.Column="1"
              Height="650"
              Width="650"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Image Source="/Views/Images/Clock/Clock.png"
                   Width="650"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            </Image>

            <!--Hour-->
            <Image Source="/Views/Images/Clock/Hour.png"
                   Height="617.5"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform x:Name="HourAngle" Angle="{Binding HourAngle}"/>
                </Image.RenderTransform>
            </Image>

            <!--Minute-->
            <Image Source="/Views/Images/Clock/Minute.png"
                   Height="617.5"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform x:Name="MinuteAngle"
                                     Angle="{Binding MinuteAngle}"/>
                </Image.RenderTransform>
            </Image>

            <!--Second-->
            <Image Source="/Views/Images/Clock/Second.png"
                   Height="617.5"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform x:Name="SecondAngle"
                                     Angle="{Binding SecondAngle}"/>
                </Image.RenderTransform>
            </Image>
        </Grid>

        <Button Grid.Column="2"
                Width="120"
                Height="47"
                Click="ExitButton_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0 33 39 0">
            <Button.Template>
                <ControlTemplate>
                    <Border Background="#292929"
                            BorderBrush="#606060"
                            BorderThickness="2"
                            CornerRadius="10">
                        <Label Content="结束考试"
                               FontFamily="{StaticResource Hei}"
                               FontSize="20"
                               Foreground="#CBCBCB"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <StackPanel Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="65 56 0 0">
            <Label FontSize="50"
                   FontFamily="{StaticResource Hei}"
                   Name="EventLabel"
                   Content="{Binding EventNameText}"
                   Foreground="#DADADA"/>
            <Label FontSize="40"
                   FontFamily="{StaticResource Hei}"
                   Name="TimeLabel"
                   Content="{Binding EventTimeText}"
                   Foreground="#A9A9A9"/>
        </StackPanel>
    </Grid>
</Window>
