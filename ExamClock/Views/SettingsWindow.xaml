<Window x:Class="ExamClock.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:ExamClock.ViewModels"
        xmlns:uc="clr-namespace:ExamClock.Views.UserControls"
        mc:Ignorable="d" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        BorderThickness="0"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Topmost="False"
        Background="Transparent"
        Title="SettingsWindow" Height="610" Width="570">
    <Window.DataContext>
        <vm:SettingsViewModel />
    </Window.DataContext>
    <Border Background="White"
            CornerRadius="{StaticResource WindowCornerRadius}"
            BorderBrush="#B2B2B2"
            MouseDown="Border_MouseDown"
            BorderThickness="1">
        <StackPanel>
            <!--标题栏-->
            <Border Height="30"
                    Background="#F3F3F3"
                    CornerRadius="{StaticResource TitleBarCornerRadius}">
                <Grid>
                    <Label Content="设置"
                           FontFamily="{StaticResource Hei}"
                           FontSize="15"
                           Margin="14 0 0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />
                    <Button HorizontalAlignment="Right"
                            Width="30" Height="30"
                            Command="{Binding CloseWindowCommand}">
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/Views/Images/Close_Gray.png" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!--Tab栏-->
            <Border Height="60"
                    Background="#F3F3F3">
                <Grid Margin="30 0 30 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--悬浮滑块-->
                    <Border Grid.ColumnSpan="1"
                            Grid.Column="{Binding CurrentGrid}"
                            Width="110" Height="46"
                            CornerRadius="23"
                            Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="6"
                                              Color="Black"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="0.13" />
                        </Border.Effect>
                    </Border>

                    <Button Name="OverallButton"
                            Grid.Column="0"
                            Command="{Binding TurnToGrid0Command}">
                        <Button.Template>
                            <ControlTemplate>
                                <Label Content="总览"
                                       FontFamily="{StaticResource Hei}"
                                       FontSize="20"
                                       Foreground="{Binding Grid0TextBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="ArrangementButton"
                            Grid.Column="1"
                            Command="{Binding TurnToGrid1Command}">
                        <Button.Template>
                            <ControlTemplate>
                                <Label Content="安排"
                                       FontFamily="{StaticResource Hei}"
                                       FontSize="20"
                                       Foreground="{Binding Grid1TextBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="AnnouncementButton"
                            Grid.Column="2"
                            Command="{Binding TurnToGrid2Command}">
                        <Button.Template>
                            <ControlTemplate>
                                <Label Content="播报"
                                       FontFamily="{StaticResource Hei}"
                                       FontSize="20"
                                       Foreground="{Binding Grid2TextBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="CollaborationButton"
                            Grid.Column="3"
                            Command="{Binding TurnToGrid3Command}">
                        <Button.Template>
                            <ControlTemplate>
                                <Label Content="校时"
                                       FontFamily="{StaticResource Hei}"
                                       FontSize="20"
                                       Foreground="{Binding Grid3TextBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!--【总览】页面-->
            <Grid Name="OutlineGrid"
                  Visibility="{Binding OutlineGridVisibility}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="413" />
                        <RowDefinition Height="62" />
                    </Grid.RowDefinitions>
                    <Label FontFamily="{StaticResource Hei}"
                           Foreground="#8D8D8D"
                           Grid.Row="0"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Content="{Binding NoticeText}" />
                    <Border Height="393" Width="514"
                            CornerRadius="23"
                            BorderThickness="0"
                            Grid.Row="1"
                            Background="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="6"
                                              Direction="0"
                                              Color="Black"
                                              ShadowDepth="0"
                                              Opacity="0.16" />
                        </Border.Effect>
                        <ScrollViewer Height="350" Width="514"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Hidden">
                            <ItemsControl ItemsSource="{Binding ExamElements, Mode=TwoWay}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Margin="38 0 43 0"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Top" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <Button Grid.Row="2"
                            Margin="52 6 0 0"
                            Height="40"
                            Width="150"
                            Command="{Binding EditRoomNumberCommand}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate>
                                <Label Content="{Binding RoomNumberText}"
                                       FontSize="20"
                                       Foreground="#8D8D8D"
                                       FontFamily="{StaticResource Hei}" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Row="2"
                            Height="45" Width="142"
                            VerticalAlignment="Top"
                            Command="{Binding ImportConfigCommand}"
                            HorizontalAlignment="Right"
                            Margin="0 0 38 0">
                        <Button.Template>
                            <ControlTemplate>
                                <Border CornerRadius="23"
                                        Background="{StaticResource ShallowBlueBrush}"
                                        BorderBrush="{StaticResource BorderBlueBrush}"
                                        BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="41" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Views/Images/Import.png"
                                               Height="19" Width="19"
                                               Grid.Column="0"
                                               HorizontalAlignment="Right" />
                                        <Label Content="导入配置"
                                               Grid.Column="2"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontFamily="{StaticResource Hei}"
                                               FontSize="18"
                                               Foreground="#0099FF" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              Color="#0099FF"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="0.2" />
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>

            <!--【安排】页面-->
            <Grid Name="ArrangementGrid"
                  Visibility="{Binding ArrangementGridVisibility}">
                <Grid Margin="52 0 38 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36" />
                        <RowDefinition Height="46" />
                        <RowDefinition Height="33" />
                        <RowDefinition Height="330" />
                        <RowDefinition Height="13" />
                        <RowDefinition Height="62" />
                    </Grid.RowDefinitions>

                    <Label FontFamily="{StaticResource Hei}"
                           Grid.Row="1"
                           Foreground="#2E4959"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="考试日程安排" />
                    <Label FontFamily="{StaticResource Hei}"
                           Grid.Row="2"
                           Foreground="#D2D2D2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="16"
                           Content="格式：科目 日期 开始时间 时长" />
                    <TextBox FontFamily="微软雅黑"
                             Grid.Row="3"
                             TextWrapping="NoWrap"
                             AcceptsReturn="True"
                             Foreground="#8D8D8D"
                             FontSize="18"
                             Text="{Binding TimeTableText}"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch" />

                    <Button Grid.Row="5"
                            Height="45" Width="142"
                            VerticalAlignment="Top"
                            Command="{Binding SaveArrangementCommand}"
                            HorizontalAlignment="Right">
                        <Button.Template>
                            <ControlTemplate>
                                <Border CornerRadius="23"
                                        Background="{StaticResource ShallowBlueBrush}"
                                        BorderBrush="{StaticResource BorderBlueBrush}"
                                        BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="41" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Views/Images/Save.png"
                                               Height="19" Width="17"
                                               Grid.Column="0"
                                               HorizontalAlignment="Right" />
                                        <Label Content="保存修改"
                                               Grid.Column="2"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontFamily="{StaticResource Hei}"
                                               FontSize="18"
                                               Foreground="#0099FF" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              Color="#0099FF"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="0.2" />
                        </Button.Effect>
                    </Button>


                </Grid>
            </Grid>

            <!--【播报】页面-->
            <Grid Name="AnnouncementGrid"
                  Visibility="{Binding AnnouncementGridVisibility}">
                <Grid Margin="52 0 50 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36" />
                        <RowDefinition Height="74" />
                        <RowDefinition Height="160" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="1"
                           FontFamily="{StaticResource Hei}"
                           Foreground="#2E4959"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="语音播报" />
                    <StackPanel Grid.Row="2">
                        <uc:AnnouncementEditor Height="50"
                                               SelectedIndex="{Binding SelectedExamBeginningIndex, Mode=TwoWay}"
                                               AnnouncementName="开考铃声"
                                               AnnouncementOptions="{Binding OnOffOptions}"
                                               AudioType="{Binding ExamBeginningSoundType}" />
                        <uc:AnnouncementEditor Height="50"
                                               SelectedIndex="{Binding SelectedNoticeBeforeEndingIndex, Mode=TwoWay}"
                                               AnnouncementName="收卷前播报"
                                               AudioType="{Binding NoticeBeforeEndingSoundType}"
                                               AnnouncementOptions="{Binding NoticeBeforeEndingOptions}" />
                        <uc:AnnouncementEditor Height="50"
                                               SelectedIndex="{Binding SelectedExamEndingIndex, Mode=TwoWay}"
                                               AnnouncementName="结束铃声"
                                               AnnouncementOptions="{Binding OnOffOptions}"
                                               AudioType="{Binding ExamEndingSoundType}" />
                    </StackPanel>

                </Grid>
            </Grid>

            <!--【校时】页面-->
            <Grid Name="CalibrationGrid"
                  Visibility="{Binding CalibrationGridVisibility}">
                <Grid Margin="52 0 38 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36" />
                        <RowDefinition Height="46" />
                        <RowDefinition Height="43" />
                        <RowDefinition Height="320" />
                        <RowDefinition Height="13" />
                        <RowDefinition Height="62" />
                    </Grid.RowDefinitions>

                    <Label FontFamily="{StaticResource Hei}"
                           Grid.Row="1"
                           Foreground="#2E4959"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="系统时间校准" />
                    <Label FontFamily="{StaticResource Hei}"
                           Grid.Row="2"
                           Foreground="#D2D2D2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="16"
                           Content="选择一个目标主机以校准系统时间" />

                    <ItemsControl ItemsSource="{Binding SyncItemElements, Mode=TwoWay}"
                                  Grid.Row="3"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>


                    <Button Grid.Row="5"
                            Height="45" Width="142"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Command="{Binding FindHostsCommand}">
                        <Button.Template>
                            <ControlTemplate>
                                <Border CornerRadius="23"
                                        Background="{StaticResource ShallowBlueBrush}"
                                        BorderBrush="{StaticResource BorderBlueBrush}"
                                        BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="41" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Views/Images/Search.png"
                                               Height="20" Width="20"
                                               Grid.Column="0"
                                               HorizontalAlignment="Right" />
                                        <Label Content="{Binding FindButtonText}"
                                               Grid.Column="2"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontFamily="{StaticResource Hei}"
                                               FontSize="18"
                                               Foreground="#0099FF" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              Color="#0099FF"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="0.2" />
                        </Button.Effect>
                    </Button>

                </Grid>
            </Grid>
        </StackPanel>
    </Border>

</Window>