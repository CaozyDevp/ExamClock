<UserControl x:Class="ExamClock.Views.UserControls.ExamItemBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamClock.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <TextBlock FontFamily="{StaticResource Hei}"
                   Foreground="#2E4959"
                   FontSize="23"
                   MaxWidth="110"
                   Grid.Column="0"
                   ToolTip="{Binding SubjectText,RelativeSource={RelativeSource AncestorType=local:ExamItemBox}}"
                   Text="{Binding SubjectText,RelativeSource={RelativeSource AncestorType=local:ExamItemBox}}"
                   HorizontalAlignment="Left"
                   TextTrimming="CharacterEllipsis"
                   VerticalAlignment="Center"
                   Margin="5 0 0 0"/>

        <TextBlock FontFamily="{StaticResource Num}"
                   Foreground="#7A7A7A"
                   FontSize="23"
                   Grid.Column="1"
                   Text="{Binding TimeText,RelativeSource={RelativeSource AncestorType=local:ExamItemBox}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBlock FontFamily="{StaticResource Num}"
                   Foreground="#7A7A7A"
                   FontSize="23"
                   Grid.Column="2"
                   Text="{Binding DurationText,RelativeSource={RelativeSource AncestorType=local:ExamItemBox}}"
                   HorizontalAlignment="Right"
                   Margin="0 0 5 0"
                   VerticalAlignment="Center"/>

    </Grid>
</UserControl>
