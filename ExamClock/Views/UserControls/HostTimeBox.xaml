<UserControl x:Class="ExamClock.Views.UserControls.HostTimeBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamClock.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="466">
    <UserControl.Resources>
        <SolidColorBrush x:Key="BackGroundBrush" Color="#F8F8F8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D9D9D9"/>
        <SolidColorBrush x:Key="ViceFontBrush" Color="#808080"/>
        <SolidColorBrush x:Key="MainFontBrush" Color="Black"/>
    </UserControl.Resources>
    <Button Command="{Binding SetSystemTimeCommand,RelativeSource={RelativeSource AncestorType=local:HostTimeBox}}">
        <Button.Template>
            <ControlTemplate>
                <Border Background="{StaticResource BackGroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding DisplayedTime,RelativeSource={RelativeSource AncestorType=local:HostTimeBox}}"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource MainFontBrush}"
                               FontFamily="{StaticResource Hei}"
                               FontSize="18"/>
                        <Label Content="{Binding HostName,RelativeSource={RelativeSource AncestorType=local:HostTimeBox}}"
                               Grid.Column="2"
                               HorizontalAlignment="Left"
                               Foreground="{StaticResource ViceFontBrush}"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource Hei}"
                               FontSize="18"/>
                        <Label Content="{Binding IpString,RelativeSource={RelativeSource AncestorType=local:HostTimeBox}}"
                               Grid.Column="2"
                               Foreground="{StaticResource ViceFontBrush}"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource Hei}"
                               FontSize="18" 
                               HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>

</UserControl>
