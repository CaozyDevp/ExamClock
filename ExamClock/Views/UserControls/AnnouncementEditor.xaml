<UserControl x:Class="ExamClock.Views.UserControls.AnnouncementEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamClock.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="470">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               FontFamily="{StaticResource Hei}"
               Foreground="#8D8D8D"
               FontSize="21"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Content="{Binding AnnouncementName,RelativeSource={RelativeSource AncestorType=local:AnnouncementEditor}}"/>
        <Button Grid.Column="1"
                Width="25"
                Command="{Binding PlayTestAudioCommand,RelativeSource={RelativeSource AncestorType=local:AnnouncementEditor}}"
                Height="25"
                HorizontalAlignment="Left"
                Name="TestPlayButton"
                IsEnabled="{Binding IsNotAudioPlaying, RelativeSource={RelativeSource AncestorType=local:AnnouncementEditor}}">
            <Button.Template>
                <ControlTemplate>
                    <Grid>
                        <Image Source="/Views/Images/Played.png"/>
                        <Image Source="/Views/Images/Stopped.png"
                               Visibility="{Binding StoppedIconVisibility, RelativeSource={RelativeSource AncestorType=local:AnnouncementEditor}}" />
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <ComboBox Grid.Column="2"
                  HorizontalAlignment="Right"
                  Width="131" Height="32"
                  FontSize="18"
                  ItemsSource="{Binding AnnouncementOptions,RelativeSource={RelativeSource AncestorType=local:AnnouncementEditor}}"
                  SelectedIndex="{Binding SelectedIndex,RelativeSource={RelativeSource AncestorType=local:AnnouncementEditor}}"
                  VerticalAlignment="Center">
        </ComboBox>
    </Grid>
</UserControl>
