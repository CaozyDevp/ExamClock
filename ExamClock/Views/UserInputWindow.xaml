<Window x:Class="ExamClock.Views.UserInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamClock.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="用户输入" Height="200" Width="380">
    <Border Background="White"
            CornerRadius="{StaticResource WindowCornerRadius}"
            BorderBrush="#B2B2B2"
            MouseDown="Border_MouseDown"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="46" />
                <RowDefinition Height="60" />
                <RowDefinition Height="64" />
            </Grid.RowDefinitions>
            <!--标题栏-->
            <Border Height="30"
                    Grid.Row="0"
                    Background="#F3F3F3"
                    CornerRadius="{StaticResource WindowCornerRadius}">
                <Grid>
                    <Label Content="用户输入"
                           FontFamily="{StaticResource Hei}"
                           FontSize="15"
                           Margin="14 0 0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />
                    <Button HorizontalAlignment="Right"
                            Width="30" Height="30"
                            Name="CloseWindowButton"
                            Click="CloseWindowButton_Click">
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/Views/Images/Close_Gray.png" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            <Label Grid.Row="1"
                   Name="PromptLabel"
                   FontFamily="{StaticResource Hei}"
                   FontSize="18"
                   Margin="36 0 0 0"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Content="" />
            <TextBox Grid.Row="2"
                     Height="32"
                     Margin="36 0 30 0"
                     FontSize="18"
                     Name="InputTextBox" />

            <Label Grid.Row="3"
                   Margin="38 0 0 0"
                   Name="WarningLabel"
                   FontFamily="{StaticResource Hei}"
                   FontSize="18"
                   Foreground="#BF1515"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Content="" />
            <Button Grid.Row="3"
                    Name="SubmitButton"
                    Click="SubmitButton_Click"
                    Height="45" Width="119"
                    HorizontalAlignment="Right"
                    Margin="0 0 30 0"
                    VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate>
                        <Border CornerRadius="23"
                                Background="{StaticResource ShallowBlueBrush}"
                                BorderBrush="{StaticResource BorderBlueBrush}"
                                BorderThickness="2">
                            <Label Content="确认"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="{StaticResource Hei}"
                                   FontSize="18"
                                   Foreground="#0099FF" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10"
                                      Color="#0099FF"
                                      Direction="0"
                                      ShadowDepth="0"
                                      Opacity="0.2" />
                </Button.Effect>
            </Button>
        </Grid>
    </Border>
</Window>